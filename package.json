{
  "name": "@whthduck/feedconn",
  "version": "0.0.2",
  "description": "A feed library connector by firebase database",
  "homepage": "https://github.com/whthduck/feedconn#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "ivannguyendev",
  "license": "MIT",
  "private": false,
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "rimraf dist *tsbuildinfo",
    "build": "APP_VERSION=$npm_package_version rimraf dist *tsbuildinfo && tsc --build",
    "build:docker": "tsc --build",
    "test": "yarn build && ava reset-cache && ava",
    "test:docker": "yarn build:docker && ava reset-cache && ava"

  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:whthduck/feedconn.git"
  },
  "keywords": [
    "feeds",
    "firebase",
    "realtime",
    "javascript",
    "nodejs"
  ],
  "dependencies": {
    "@typegoose/typegoose": "^9.10.1",
    "debug": "^4.3.4",
    "firebase-admin": "^11.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.4.4"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.182",
    "@types/node": "~12",
    "ava": "^4.3.0",
    "eslint": "~7.10",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.1",
    "rimraf": "~3.0",
    "ts-loader": "~6.1",
    "ts-node": "~8.4",
    "tsconfig-paths": "~3.9"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": false
    }
  }
}
